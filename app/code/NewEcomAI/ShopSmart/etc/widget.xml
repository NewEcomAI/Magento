            <parameter name="shop_smart_destination_status" xsi:type="select" visible="true" sort_order="110"
                       source_model="NewEcomAI\ShopSmart\Model\Config\Source\Status">
                <label translate="true">Destination Status</label>
            </parameter>
            <parameter name="shop_smart_custom_css" xsi:type="block" visible="true" sort_order="120">
                <label translate="true">Custom CSS</label>
                <block class="NewEcomAI\ShopSmart\Block\Adminhtml\Widget\TextAreaField"/>
            </parameter>
        </parameters>
    </widget>
</widgets>

