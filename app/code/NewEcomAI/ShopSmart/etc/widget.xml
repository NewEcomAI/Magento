<?xml version="1.0" encoding="UTF-8"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="NewEcomAI\ShopSmart\Block\Adminhtml\Widget\PopupPosition" id="newecomai_discover_popup">
        <label>NewEcomAI</label>
        <description>Shop Smart</description>
        <parameters>
            <parameter name="shop_smart_popup_position" xsi:type="select" visible="true" sort_order="10"
                       source_model="NewEcomAI\ShopSmart\Model\Config\Source\PopupLayout">
                <label translate="true">Layout</label>
            </parameter>
            <parameter name="shop_smart_layout_product_grid" xsi:type="select" visible="true" sort_order="30"
                       source_model="NewEcomAI\ShopSmart\Model\Config\Source\ProductGrid">
                <label translate="true">Layout: Product Grid</label>
