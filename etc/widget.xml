<?xml version="1.0"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="NewEcomAI\ShopSmart\Block\Adminhtml\Widget\DiscoverPopup" id="newecomai_discover_popup">
        <label>NewEcomAI Discover</label>
        <description>Shop Smart</description>
        <parameters>
            <parameter name="shop_smart_discover_popup_position" xsi:type="select" visible="true" sort_order="10"
                       source_model="NewEcomAI\ShopSmart\Model\Config\Source\PopupLayout">
                <label translate="true">Layout</label>
            </parameter>
            <parameter name="shop_smart_discover_layout_product_grid" xsi:type="select" visible="true" sort_order="20">
                <label translate="true">Layout: Product Grid</label>
                <options>
                    <option name="one_product_row" value="1">
                        <label translate="true">1 Product/Row</label>
                    </option>
                    <option name="two_product_row" value="2">
                        <label translate="true">2 Product/Row</label>
                    </option>
                    <option name="three_product_row" value="3">
                        <label translate="true">3 Product/Row</label>
                    </option>
                    <option name="four_product_row" value="4" selected="true">
                        <label translate="true">4 Product/Row</label>
                    </option>
                    <option name="five_product_row" value="5">
                        <label translate="true">5 Product/Row</label>
                    </option>
                    <option name="six_product_row" value="6">
                        <label translate="true">6 Product/Row</label>
                    </option>
                </options>
            </parameter>
            <parameter name="shop_smart_discover_heading" xsi:type="text" visible="true" sort_order="30">
                <label translate="true">Heading</label>
            </parameter>
            <parameter name="shop_smart_discover_message_placeholder" xsi:type="text" visible="true" sort_order="40">
                <label translate="true">Message placeholder</label>
            </parameter>
            <parameter name="shop_smart_discover_button_text" xsi:type="text" visible="true" sort_order="50">
                <label translate="true">Button Text</label>
            </parameter>
            <parameter name="shop_smart_discover_button_background_color" xsi:type="block" visible="true" sort_order="60">
                <label translate="true">Button BG Color</label>
                <block class="NewEcomAI\ShopSmart\Block\Adminhtml\Widget\ButtonColor"/>
            </parameter>
            <parameter name="shop_smart_discover_section_button_color" xsi:type="block" visible="true" sort_order="70">
                <label translate="true">Section Background color</label>
                <block class="NewEcomAI\ShopSmart\Block\Adminhtml\Widget\SectionBackgroundColor"/>
            </parameter>
            <parameter name="shop_smart_discover_image" xsi:type="block" visible="true" sort_order="80">
                <label>Image</label>
                <block class="NewEcomAI\ShopSmart\Block\Adminhtml\Widget\ImageChooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string">Choose Image...</item>
                        </item>
                    </data>
                </block>
            </parameter>
            <parameter name="shop_smart_discover_image_recognition" xsi:type="select" visible="true" sort_order="90"
                       source_model="NewEcomAI\ShopSmart\Model\Config\Source\Status">
                <label translate="true">Image Recognition</label>
            </parameter>
            <parameter name="shop_smart_discover_layout_text" xsi:type="text" visible="true" sort_order="100">
                <label translate="true">Layout: Layout Left and Right Side Text</label>
            </parameter>
            <parameter name="shop_smart_discover_layout_description_text" xsi:type="text" visible="true" sort_order="110">
                <label translate="true">Layout: Layout Left and Right Side Description Text</label>
            </parameter>
            <parameter name="shop_smart_discover_example_query_one" xsi:type="text" visible="true" sort_order="120">
                <label translate="true">Example query: 1</label>
            </parameter>
            <parameter name="shop_smart_discover_example_query_two" xsi:type="text" visible="true" sort_order="130">
                <label translate="true">Example query: 2</label>
            </parameter>
            <parameter name="shop_smart_discover_example_query_three" xsi:type="text" visible="true" sort_order="140">
                <label translate="true">Example query: 3</label>
            </parameter>
            <parameter name="shop_smart_discover_example_query_four" xsi:type="text" visible="true" sort_order="150">
                <label translate="true">Example query: 4</label>
            </parameter>
            <parameter name="shop_smart_discover_example_query_five" xsi:type="text" visible="true" sort_order="160">
                <label translate="true">Example of query: 5</label>
            </parameter>
            <parameter name="shop_smart_discover_destination_status" xsi:type="select" visible="true" sort_order="170"
                       source_model="NewEcomAI\ShopSmart\Model\Config\Source\Status">
                <label translate="true">Destination Status</label>
            </parameter>
            <parameter name="shop_smart_discover_custom_css" xsi:type="block" visible="true" sort_order="180">
                <label translate="true">Custom CSS</label>
                <block class="NewEcomAI\ShopSmart\Block\Adminhtml\Widget\TextAreaField"/>
            </parameter>
        </parameters>
    </widget>

